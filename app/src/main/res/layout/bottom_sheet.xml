<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_230sdp"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/first"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_15sdp"
        android:layout_above="@+id/view"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/image_name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_18sdp"
        android:textAllCaps="true"
        android:layout_weight="0.6"
        android:layout_margin="@dimen/_8sdp"
        android:padding="@dimen/_5sdp"
        android:text="BP"
        android:background="@drawable/circle"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="2.0"
            android:layout_width="0dp"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="Bop Parking"
                android:id="@+id/name_user"
                android:textSize="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/location"
                android:layout_weight="1"
                android:text="Mascow pa"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:drawableLeft="@drawable/gray_loc"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />



        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:weightSum="2"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:text="12 spots"
                android:id="@+id/remaning_spots"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/price"
                android:layout_weight="1"
                android:text="2$"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:drawablePadding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />



        </LinearLayout>

        <ImageView
            android:id="@+id/arrow"
            android:src="@drawable/arrow"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/button_background"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="@dimen/_25sdp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:layout_above="@+id/data"
        android:background="@color/black"/>

    <RelativeLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_above="@+id/availablity_type"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/parking_available"
            android:text="Parking Available"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/_4sdp"/>

        <TextView
            android:id="@+id/parking_value"
            android:text="3 parking available"
            android:textColor="@color/red"
            android:textSize="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_4sdp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/availablity_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_above="@+id/submit_area"
        android:weightSum="3">

        <TextView
            android:id="@+id/high"
            android:textSize="@dimen/_15sdp"
            android:text="HIGH"
            android:layout_margin="@dimen/_6sdp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:padding="@dimen/_6sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/green_backgrounds"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Medium"
            android:textSize="@dimen/_15sdp"
            android:text="Medium"
            android:layout_margin="@dimen/_6sdp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:padding="@dimen/_6sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/yellow_backgrounds"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/low"
            android:textSize="@dimen/_15sdp"
            android:text="LOW"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_6sdp"
            android:padding="@dimen/_6sdp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/red_backgrounds"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/submit_area"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:layout_gravity="bottom"
        android:text="Reserve Parking Spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>