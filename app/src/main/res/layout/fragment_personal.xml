<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PersonalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarSize="@dimen/_2sdp"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Personal Data"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_name"
                android:layout_width="match_parent"
                android:layout_below="@+id/title"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Name"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_text_one"
                app:layout_constraintVertical_bias="0.069"
                tools:layout_editor_absoluteX="6dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_Email"
                android:layout_width="match_parent"
                android:layout_below="@+id/edit_text_name"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Email"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_text_one"
                app:layout_constraintVertical_bias="0.069"
                tools:layout_editor_absoluteX="6dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_Number"
                android:layout_below="@+id/edit_text_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Phone number"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_text_one"
                app:layout_constraintVertical_bias="0.069"
                tools:layout_editor_absoluteX="6dp" />

            <TextView
                android:id="@+id/tuck_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_Number"
                android:padding="@dimen/_5sdp"
                android:text="Truck Information"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_truck_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tuck_information"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Truck Number"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_text_one"
                app:layout_constraintVertical_bias="0.069"
                tools:layout_editor_absoluteX="6dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_truck_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_truck_number"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Truck Make"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_text_one"
                app:layout_constraintVertical_bias="0.069"
                tools:layout_editor_absoluteX="6dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_truck_color"
                android:layout_width="match_parent"
                android:layout_below="@+id/edit_text_truck_make"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Truck Color"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_text_one"
                app:layout_constraintVertical_bias="0.069"
                tools:layout_editor_absoluteX="6dp" />


            <TextView
                android:id="@+id/documents"
                android:layout_below="@+id/edit_text_truck_color"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:text="Douments"
                android:padding="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/linar_doc"
                android:orientation="vertical"
                android:layout_below="@+id/documents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/item"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:id="@+id/image_thumb"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_data"
                        android:text="Truck_registration"
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:textStyle="normal"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/black"
                        android:alpha="0.8"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_confirm2"
                        android:text="Confirm"
                        android:drawableLeft="@drawable/done"
                        android:drawablePadding="@dimen/_8sdp"
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/green"
                        android:alpha="0.8"

                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/item2"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:id="@+id/image_thumb2"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_data2"
                        android:text="Truck License"
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:textStyle="normal"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/black"
                        android:alpha="0.8"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/text_confirm"
                        android:text="Confirm"
                        android:drawableLeft="@drawable/done"
                        android:drawablePadding="@dimen/_8sdp"
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/green"
                        android:alpha="0.8"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <Button
                    android:id="@+id/save_truck"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:text="Save Truck"
                    android:background="@drawable/button_background"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_buttom"
                android:layout_below="@+id/linar_doc"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_18sdp"
                android:weightSum="2"
                android:padding="@dimen/_8sdp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/save"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_35sdp"
                    android:text="Save"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:textAllCaps="false" />
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_35sdp"
                    android:text="Cancel"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:background="@drawable/button_backgrounds"
                    android:textAllCaps="false" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>