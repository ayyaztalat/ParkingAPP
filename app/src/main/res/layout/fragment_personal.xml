<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Fragments.PersonalFragment"
    android:layout_marginBottom="@dimen/_25sdp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="@dimen/_8sdp"
    android:layout_margin="@dimen/_8sdp"

    >



        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_18sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Personal Data"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Name"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_text_one"
                app:layout_constraintVertical_bias="0.069"
                tools:layout_editor_absoluteX="6dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_name"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Email"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_text_one"
                app:layout_constraintVertical_bias="0.069"
                tools:layout_editor_absoluteX="6dp" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/edit_text_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_text_Email"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="Phone number"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_text_one"
                app:layout_constraintVertical_bias="0.069"
                tools:layout_editor_absoluteX="6dp" />


            <TextView
                android:id="@+id/truck_details"
                android:text="Add Truck Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:padding="@dimen/_8sdp"
                android:background="@drawable/button_backgrounds"
                android:gravity="center"
                android:layout_margin="@dimen/_8sdp"
                android:layout_below="@+id/edit_text_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:id="@+id/buttons_buttom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/truck_details"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp"

                android:weightSum="2">

                <Button
                    android:id="@+id/save"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="Save"
                    android:layout_margin="@dimen/_3sdp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_3sdp"
                    android:background="@drawable/button_backgrounds"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>
        </RelativeLayout>



</LinearLayout>

    </ScrollView>